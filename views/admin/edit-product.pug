extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if editing === false
            form.product-form(action='/admin/add-product', method="POST")
                .form-control
                    label(for="title") Title
                    input(type="text", name="title")#title
                .form-control
                    label(for="imageUrl") Image URL
                    input(type="text", name="imageUrl")#imageUrl
                .form-control
                    label(for="price") Price
                    input(type="number", step="0.01" name="price")#price 
                .form-control
                    label(for="description") Description
                    textarea(type="text", name="description", rows="5")#description                    
                button.btn(type="submit") Add Product
        else
            form.product-form(action=`/admin/edit-product`, method="POST")
                .form-control
                    label(for="title") Title
                    input(type="text", name="title", value=`${product.title}`)
                .form-control
                    label(for="imageUrl") Image URL
                    input(type="text", name="imageUrl", value=`${product.imageUrl}`)
                .form-control
                    label(for="price") Price
                    input(type="number", step="0.01" name="price" value=`${product.price}`)
                .form-control
                    label(for="description") Description
                    textarea(type="text", name="description", rows="5") #{product.description}
                .form-control
                    input(type="hidden", value=`${product.id}`, name="productId")                  
                button.btn(type="submit") Update Product